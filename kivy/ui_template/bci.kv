#:import MDLabel kivymd.label.MDLabel
#:import MDCard kivymd.card.MDCard
#:import FigureCanvasKivy kivy.garden.matplotlib.FigureCanvasKivy

<FFT>:
	orientation: 'vertical'
	spacing:'5dp'
	BoxLayout:
		#padding:'5dp'
		spacing:'20dp'
		size_hint:(1,0.1)
		Label:
			id:FFTstate
			text:'No signal'
