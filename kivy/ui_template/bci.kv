#:import MDLabel kivymd.label.MDLabel
#:import MDCard kivymd.card.MDCard

<FFT>:
	orientation: 'vertical'
	spacing:'5dp'
	BoxLayout:
		#padding:'5dp'
		spacing:'20dp'
		size_hint:(1,0.1)
		Label:
			id:FFTstate
			text:'No signal'
#		ToggleButton:
#			text:'256'
#			group:'FFT'
#			state:'down'
#		ToggleButton:
#			text:'512'
#			group:'FFT'
#		ToggleButton:
#			text:'1024'
#			group:'FFT'

<SerialPortSelection>:
	padding:'10dp'
	spacing:'10dp'
	orientation:'horizontal'
	Spinner:
		id:uart
		#text:''
		#values:()
		size_hint:(0.7,1)

	ToggleButton:
		id:connect
		size_hint:(0.2,1)
		text:'Connect'
		on_state: self.parent.changeState(self.state)

	Button:
		size_hint:(0.2,1)
		text:'Refresh'
		on_press: self.parent.scanPorts(0)

<RealTimePlotting>:
	orientation:'vertical'
<Test>:
    orientation: 'vertical'
	BoxLayout:
		orientation: 'horizontal'
		padding:'10dp'
		spacing:'10dp'
		canvas.before:
			Rectangle:
				pos: self.pos
				size: self.size
				source:'ui_template/background.jpg'

		BoxLayout:
			orientation: 'vertical'
			padding:'10dp'
			spacing:'10dp'

			Camera:
				#orientation: 'vertical'
				id: camera
				resolution: 640,480
				play: True

			RealTimePlotting:
				#color:0,1,0,0.5
				#id:realTimeFFT
				id:RealTimePlotting
				#text:'FFT'
				#background_normal: 'images/button_normal.png'
			SerialPortSelection:
				size_hint:(1,0.2)
				#sync_height: True

		BoxLayout:
			orientation: 'vertical'
			padding:'10dp'
			spacing:'10dp'

			CodeInput:
				size_hint:(1,0.3)
				text:'Please input your password'

			GridLayout:
				padding:'10dp'
				spacing:'10dp'
				cols:3

				Button:
					id:button1
					text:'1'

				Button:
					id:button2
					text:'2'

				Button:
					id:button3
					text:'3'

				Button:
					id:button4
					text:'4'

				Button:
					id:button5
					text:'5'

				Button:
					id:button6
					text:'6'

				Button:
					id:button7
					text:'7'

				Button:
					id:button8
					text:'8'

				Button:
					id:button9
					text:'9'

				Button:
					id:buttonConfirm
					text:'Confirm'

				Button:
					id:button0
					text:'0'

				Button:
					id:buttonCancel
					text:'Cancel'
